<div class="resume">
  <div class="resume-container">
    <img src="https://secure.gravatar.com/avatar/8e21b254d7c82fdce3286a21345dd3c4?s=150"></img>
    <h3><%= @resume['contact']['name'] %> <small style="font-weight: 400; font-size: .65em;"><%= markdown(@resume['contact']['social_media']) %></small></h3> 
    <hr style="margin-bottom: 0">
    <div style="margin-top: 0">
      <%= markdown(@resume['contact']['email']) %> |&nbsp;
      <%= markdown(@resume['contact']['github']) %> |&nbsp;
      <%= markdown(@resume['contact']['linkedin']) %>
    </div>
    <br/>
    <br/>
    <br/>
    <br/>
    <%= render 'resume' %>
  </div>
</div>
