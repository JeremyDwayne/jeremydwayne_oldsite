<div class="devise_wrapper">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "devise_form"}) do |f| %>
    <br />
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>
    <br />
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, id: "user_remember_me_label" %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn" %>
    </div>
  <% end %>

 <div class="form_links">
  <%= render "devise/shared/links" %>
 </div>
</div>
