<section class="post_list">
  <div class="post_row">
    <div class="post">
      <span class="post_title"><%= link_to @post.title, @post %></span><br/>
      <%= markdown(@post.content) %>
      <br/>
      Share: <%= social_share_button_tag(@post.title, url: post_url(@post), popup: true) %>
    <br/>
    <%= link_if_admin 'Edit |', edit_post_path(@post) %>
    <%= link_if_admin 'Delete |', post_path(@post), method: :destroy %>
    <%= link_to 'Back', posts_path %>
    <hr>
    <%= render 'disqus' %>
    </div>
  </div>
</section>
